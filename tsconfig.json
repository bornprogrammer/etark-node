{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@app/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "*",
    "src/**/*.ts",
    "tests/**/**/*.ts"
  ],
  "exclude": [
    "src/locales",
    "node_modules",
    ".vscode"
  ],
}