{
  "extends": [
    "tslint-clean-code",
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/tslint-clean-code/dist/src/"
  ],
  "rules": {
    "no-commented-out-code": true,
    "object-literal-sort-keys": false,
    "max-line-length": [
      true,
      400
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  },
  "jsRules": true
}